{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ESNext",
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true
  },
  "include": [
    "docs",
    "configs/base.ts",
    "configs/se.ts",
    "configs/de.ts",
    "configs/devops.ts",
    "configs/tools.ts",
    "configs/backend.ts",
    "configs/web.ts"
  ],
  "mdx": {
    "checkMdx": true
  },
  "exclude": [
    "node_modules"
  ]
}
